<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="   手机账号注册："
        android:textSize="35dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:id="@+id/liner_layout2"
        android:background="@drawable/line">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="昵称："
        android:textColor="#ff080807"
        android:textSize="28dp"
        android:id="@+id/textView2"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textColor="#ff080807"
            android:hint="请输入注册昵称"
            android:textSize="25dp"
            android:layout_below="@+id/textView"
            android:layout_marginTop="40dp"
            android:id="@+id/ninchen" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageView"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/textView2"
            android:src="@drawable/second"
            />


    </LinearLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="国家地区"
        android:textColor="#ff080807"
        android:textSize="28dp"
        android:id="@+id/guojia"
        android:layout_below="@+id/textView"
        android:layout_marginTop="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="中国（+86）"
        android:textColor="#ff50af28"
        android:textSize="28dp"
        android:id="@+id/china"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/guojia"
        android:layout_toRightOf="@+id/guojia"
        android:layout_toEndOf="@+id/guojia" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shouji"
        android:background="@drawable/line2"
        android:layout_below="@+id/textView"
        android:layout_marginTop="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号："
            android:textSize="28dp"
            android:textColor="#ff080807"
            android:id="@+id/shoujihao"
            android:layout_below="@+id/shouji"
            android:layout_marginBottom="10dp"
            />

        <EditText
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff080807"
            android:hint="填写手机号"
            android:textSize="28dp"
            android:id="@+id/shoujikuang" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mima"
        android:background="@drawable/line2"
        android:layout_below="@+id/textView"
        android:layout_marginTop="210dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码："
            android:textColor="#ff080807"
            android:textSize="28dp"
            android:id="@+id/textView5"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/mima"

         />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textColor="#ffc1c1c1"
            android:hint="   填写密码"
            android:textSize="28dp"
            android:id="@+id/mimakuang" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/liner_layout3"
        android:background="@drawable/line2"
        android:layout_below="@+id/textView"
        android:layout_marginTop="270dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邮箱："
            android:textSize="28dp"
            android:textColor="#ff080807"
            android:layout_marginBottom="8dp"
            android:id="@+id/email"
           />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="  请输入邮箱"
            android:textColor="#ff080807"
            android:background="@null"
            android:textSize="24dp"
            android:id="@+id/emailkuang" />


    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="注册"
        android:gravity="center"
        android:id="@+id/button"
        android:textColor="#ffffffff"
        android:textSize="30dp"
        android:background="@drawable/three"
        android:layout_below="@+id/textView"
        android:layout_marginTop="320dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 点 击 上 面的 注册 按钮，即 表 示你同意"
        android:textSize="18dp"
        android:id="@+id/wenzi"
        android:layout_marginTop="385dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/xieyi"
        android:text="《微信软件许可及服务协》《微信隐私保护指引》"
        android:textSize="16dp"
        android:layout_below="@+id/textView"
        android:layout_marginTop="405dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消"
        android:textSize="18dp"
        android:background="@null"

        android:id="@+id/button2"
        android:layout_above="@+id/liner_layout2"
        android:layout_toRightOf="@+id/china"
        android:layout_toEndOf="@+id/china" />


</RelativeLayout>
