<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.hc.finshhomework.DengluActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="   手机账号登陆："
        android:textSize="35dp"
        android:id="@+id/textView"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/liner_layout2"
        android:background="@drawable/line">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称："
            android:textColor="#ff080807"
            android:textSize="28dp"
            android:id="@+id/textView2"
            android:layout_marginTop="43dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:background="@null"
            android:layout_height="wrap_content"
            android:hint="请输入注册昵称"
            android:textColor="#ff080807"
            android:textSize="25dp"
            android:layout_below="@+id/textView"
            android:layout_marginTop="40dp"
            android:id="@+id/ninchen" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/textView2"
            android:src="@drawable/second"
            />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mima"
        android:background="@drawable/line2"
        android:layout_below="@+id/textView"
        android:layout_marginTop="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码："
            android:textColor="#ff080807"
            android:textSize="28dp"
            android:id="@+id/textView5"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/mima"

            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="   填写密码"
            android:textSize="28dp"
            android:textColor="#ff080807"
            android:id="@+id/mimakuang" />


    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="登陆"
        android:gravity="center"
        android:id="@+id/button"
        android:textColor="#ffffffff"
        android:textSize="30dp"
        android:background="@drawable/three"
        android:layout_below="@+id/textView"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 点击上面的登陆按钮，即表示你同意协议"
        android:textSize="20dp"
        android:id="@+id/wenzi"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="350dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="center"
        android:textColor="#ffffffff"
        android:textSize="30dp"
        android:text="注册"
        android:id="@+id/zhuce"
        android:layout_below="@+id/textView"
        android:layout_marginTop="280dp"
        android:background="@drawable/three"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>


